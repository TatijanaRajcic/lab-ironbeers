<div class="random-beer-container">

  <div class="random-beer-img-container">
    <img src="{{beer.image_url}}" alt="">
  </div>

  <article class="random-beer-content-container">

    <p class="random-beer-name">{{beer.name}}</p>

    <p>{{beer.tagline}}</p>

    <p>{{beer.description}}</p>

    <p class="random-beer-pairing">Food pairing</p>
    <ul>
      {{#each beer.food_pairing}}
        <li>{{this}}</li>
      {{/each}}
    </ul>

    <p><span class="random-beer-tips">Brewer's tips:</span> {{beer.brewers_tips}}</p>

  </art>
</div>